{
  "openapi": "3.0.1",
  "info": {
    "title": "JusticeLeague.Api, Version=1.0.0.0, Culture=neutral, PublicKeyToken=null",
    "version": "1.0"
  },
  "servers": [
    {
      "url": "https://localhost:7140/",
      "description": "Local"
    }
  ],
  "paths": {
    "/heroes": {
      "get": {
        "tags": [
          "Heroes"
        ],
        "operationId": "GetHeroes",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Hero"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": [
          "Heroes"
        ],
        "operationId": "CreateHero",
        "parameters": [
          {
            "name": "heroName",
            "in": "query",
            "required": true,
            "style": "form",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "civilianName",
            "in": "query",
            "required": true,
            "style": "form",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "superpower",
            "in": "query",
            "required": true,
            "style": "form",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Created",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Hero"
                }
              }
            }
          }
        }
      }
    },
    "/heroes/{id}": {
      "get": {
        "tags": [
          "Heroes"
        ],
        "operationId": "GetHeroById",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "style": "simple",
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Hero"
                }
              }
            }
          },
          "404": {
            "description": "Not Found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Hero"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Hero": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid",
            "readOnly": true
          },
          "heroName": {
            "type": "string",
            "nullable": true
          },
          "civillianName": {
            "type": "string",
            "nullable": true
          },
          "superpower": {
            "$ref": "#/components/schemas/Superpower"
          }
        },
        "additionalProperties": false
      },
      "Superpower": {
        "enum": [
          "SuperStrength",
          "Flight",
          "SuperSpeed"
        ],
        "type": "string"
      }
    }
  }
}